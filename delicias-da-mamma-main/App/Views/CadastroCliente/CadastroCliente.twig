<main id="cadastroPage">
        <section id="loginForm">
            <h1>Cadastre-se</h1>
            <form method="POST" action="/cadastrar">
                <article class="inputs">
                    <aside>
                        <h3>Nome</h3>
                        <input type="text" name="nome" placeholder="Nome">
                    </aside>
                    <aside>
                        <h3>E-mail:</h3>
                        <input type="email" name="email" placeholder="examplo@gmail.com">
                    </aside>
                    <aside>
                        <h3>Rua</h3>
                        <input type="text" name="rua" placeholder="Rua">
                    </aside>
                    <aside>
                        <h3>Bairro</h3>
                        <input type="text" name="bairro" placeholder="Bairro">
                    </aside>
                    <aside>
                        <h3>Numero</h3>
                        <input type="text" name="numero" placeholder="Numero">
                    </aside>
                    <aside>
                        <h3>Complemento</h3>
                        <input type="text" name="complemento" placeholder="Complemento">
                    </aside>
                    <aside>
                        <h3>Telefone</h3>
                        <input type="text" name="telefone" placeholder="Telefone">
                    </aside>
                    <aside>
                        <h3>Senha:</h3>
                        <input type="password" name="password" placeholder="SENHA">
                    </aside>
                </article>
                <article>
                    <input type="submit" value="Cadastrar">
                </article>
                <article>
                    {% if url == '/cadastroCliente?cadastroRealizado' %}
                        <p class="cadastroRealizado">{{ 'Cadastro realizado com sucesso!' }}</p>
                    {% endif %}
                    {% if url == '/cadastroCliente?camposEmBranco' %}
                        <p class="cadastroNaoEfetuado">{{ 'Verifique todas as informações!' }}</p>
                    {% endif %}
                </article>
            </form>
        </section>
    </main>